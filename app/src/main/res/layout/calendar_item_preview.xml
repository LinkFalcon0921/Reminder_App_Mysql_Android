<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1"
    android:padding="14dp"
    android:layout_margin="12dp"
    android:layout_marginBottom="23dp"
    android:background="@drawable/border_item_preview">

    <TextView
        android:id="@+id/subject_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/calendar_text_high_size"
        android:layout_marginVertical="7sp" />

    <TextView
        android:id="@+id/date_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:textSize="@dimen/calendar_date_high_size" />

</LinearLayout>
